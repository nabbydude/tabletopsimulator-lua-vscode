// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": [
        {
          "base": "$ts-webpack",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "Compiling.*?|Compilation .*?starting"
            },
            "endsPattern": {
              "regexp": "Compiled .*?successfully|Compilation .*?finished|webpack .* compiled .* in "
            }
          }
        },
        {
          "base": "$tslint-webpack",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "Compiling.*?|Compilation .*?starting"
            },
            "endsPattern": {
              "regexp": "Compiled .*?successfully|Compilation .*?finished|webpack .* compiled .* in "
            }
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
